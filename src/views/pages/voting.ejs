<html>
    <head>
        <%- include('header'); -%>
    </head>
    <body>
        <% if (locals.user_choice) { %>
            <div class="alert alert-success alert-dismissible fade show notification" role="alert">
                Your vote has been saved!
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
            </div>
        <% } %>
        <div class="h1" id="time-counter"></div>
        <main class="d-flex justify-content-center align-items-center h1" style="height: 100vh">
            <form name="form1" method="POST" action="/voting">
                <table>
                    <tr>
                        <td>
                            <label for="otsus" class="text-dark h1">Option:</label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <select id="otsus" class="form-control h1" name="otsus">
                                <option value="poolt" <%= locals?.user_choice === 'poolt' ? 'selected' : '' %>>Poolt</option>
                                <option value="vastu" <%= locals?.user_choice === 'vastu' ? 'selected' : '' %>>Vastu</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-group h1">
                                <input class="btn btn-primary btn-block h1" type="submit" value="Save" />
                            </div>
                        </td>
                    </tr>
                </table>
            </form>            
        </main>
        <script src="../js/countdown_voting.js"></script>
    </body>
</html>